# Database (Vercel Postgres - provisioned from Vercel dashboard → Storage → Postgres)
DATABASE_URL=postgres://...
DIRECT_URL=postgres://...

# Admin password
ADMIN_PASSWORD=changeme

# JWT secret for session tokens (generate a random 32+ char string)
JWT_SECRET=change-this-to-a-random-secret-string

# Resend API key (https://resend.com/api-keys)
RESEND_API_KEY=re_your_api_key_here

# From email address (must match verified Resend domain, or use onboarding@resend.dev for testing)
EMAIL_FROM=Burger Heaven <onboarding@resend.dev>

# Allowed origins for the public /api/subscribe endpoint (comma-separated)
ALLOWED_ORIGINS=https://burgerheavennw.ca,https://www.burgerheavennw.ca
